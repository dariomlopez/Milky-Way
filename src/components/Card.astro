---
interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
    stack: string;
}

const { url, image, title, body, stack } = Astro.props;
---
<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img class="card__img" width="226" height="127" src={image} alt="ProjectImage">
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {body}
        </p>
        <p>
            <strong>Stack:</strong> 
            {stack}
        </p>
    </a>
</li>

