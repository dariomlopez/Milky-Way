---
interface Props {
    url: string;
    image: string;
    title: string;
    dates: string;
    body: string;
    stack: string;
}

const { url, image, title, dates, body, stack } = Astro.props;
---
<li class="card">
    <a class="card__link" href={url} target="_blank" rel="noopener noreferrer">
        <!-- <div class="center">
            <img class="card__img" width="226" height="127" src={image} alt="ProjectImage">
        </div> -->
        <h3 class="card__title">
            {title}
        </h3>
        <h3 class="card__dates">
            {dates}
        </h3>
        <p class="card__txt">
            {body}
        </p>
        <p>
            <strong>Stack:</strong> 
            {stack}
        </p>
    </a>
</li>

